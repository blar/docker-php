#!/usr/bin/env sh

set -e

if [ "$APPLICATION_ENV" != "production" ]; then
    echo "alias_development wird aktiviert, da die Umgebungsvariable APPLICATION_ENV nicht 'production' ist" >&2
    # Da Alias nicht in einem If-Block g√ºltig ist, muss dies im entrypoint aktiviert werden.
    apache2-module-enable alias_development
fi

if [ "$1" = "httpd" ]; then

    set -- "$@" -DFOREGROUND

fi; 

exec "$@"
